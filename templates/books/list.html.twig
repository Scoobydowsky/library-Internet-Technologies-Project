{% extends 'base.html.twig' %}

{% block body %}

    Tutaj lista ksiązek
    <table>
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Autor</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            {% set bookId = book.id %}
            <tr>
                <td><a href="{{ path('app_book_page', {'id': bookId}) }}">{{ book.title }}</a></td>
                <td>{{ book.authorID }}</td>
                <td>
                    {% if book.reservation == true %}
                        Zarezerwowano
                    {% elseif book.borrowed == true %}
                        Wypożyczona
                    {% elseif book.borrowed == false and book.reservation == false %}
                        Wypożycz
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}