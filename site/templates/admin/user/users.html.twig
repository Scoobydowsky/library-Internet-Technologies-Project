{% extends 'base.html.twig' %}
 {% block body %}
    <div class="row col-sm-12 col-md-8">
        <table class='table'>
            <thead>
                <tr>
                    <th class='fs-3'>Login</th>
                    <th class='fs-3'>Rola</th>
                    <th class='fs-3'>Akcja</th>
                </tr>
            </thead>


        {% for users in users %}
        <tr>
            <td class='fs-4'>{{ users.login }}</td>
            <td class='fs-4'>
                {% if users.isAdmin == 'True' %}
                    <span>Admin</span>
                {% elseif users.isLibrarian == 'True' %}
                    <span>Bibliotekarz</span>
                {% else %}
                    <span>Czytelnik</span>
                {% endif %}
            </td>
            <td class='fs-4'>
                <a type='button' class="btn btn-sm btn-dark fs-4" href="#">Edytuj dane</a>
            {% if user.id == users.id %}
                    {# <span>Nie możesz usunąć samego siebie</span> #}
                {% else %}
                    <a type='button' class="btn btn-sm btn-danger fs-4" href="{{ path('app_admin_deleteuser', {'id': users.id}) }}" onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?')">Usuń użytkownika</a>
            {% endif %}
            </td>
        </tr>

        {% endfor %}


    </table>


{% endblock %}