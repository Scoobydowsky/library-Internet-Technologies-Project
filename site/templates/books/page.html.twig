{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/book_details.css') }}">
{% endblock %}
{% block body %}
    <div class="bcg row col-md-10 col-sm-12">
        <div class="row">
            <div class="col-md-3">
                <p class='fs-3'>Rok wydania:<br> {{ book.date }}</p>
                <p class='fs-3'>ISBN:<br> {{ book.ISBN }}</p>
            {% if user.isAdmin %}
            {% elseif user.isLibrarian %}
                <div class="action_row row">
                    <a class="btn btn-sm mt-2 btn-primary fs-4" href="#">Wypożycz</a>
                    <a class="btn btn-sm mt-2 btn-secondary fs-4" href="{{ path('app_book_book_edit', {'id': book.title}) }}">Edytuj</a>
                    <a class="btn btn-sm mt-2 btn-danger fs-4" href="#">Usuń</a>
                </div>
            {% else %}
                <div class="action_row row">
                    <a class="btn btn-sm mt-2 btn-primary fs-4" href="#">Zarezerwuj</a>
                </div>  
            {% endif %}
            </div>
            <div class="col-md-7">
                <h1 class='fs-1'>{{ book.title }} </h1>
                <h2 class='fs-2'>{{ book.author }}</h2>
            
                <p id='description' class='fs-3'>{{ book.description }}</p>
            </div>
        </div>

        {% if user.isLibrarian %}
            {% for book in borrowHistory %}
            DATA: {{ book.borrowDate|date('d-m-Y') }} - {{ book.returnDate|date('d-m-Y') }}<br>
                Wypożyczona przez: {{ book.user_login }} <br>
                Przez Bibliotekarza: {{ book.librarian_login }}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}