{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/booklist.css') }}">
    {% endblock %}

{% block body %}
        <div class="row col-sm-12 col-md-8">
            <table class='table'>
                <thead>
                <tr>
                    <th>Tytuł</th>
                    <th>Autor</th>
                    <th>Status</th>
                    <th>Akcja</th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    {% set bookId = book.id %}
                    <tr>
                        <td><a href="{{ path('app_book_page', {'id': bookId}) }}">{{ book.title }}</a></td>
                        <td>{{ book.authorID }}</td>
                        <td>
                            {% if book.reservation == true %}
                                Zarezerwowano
                            {% elseif book.borrowed == true %}
                                Wypożyczona
                            {% elseif book.borrowed == false and book.reservation == false %}
                                Dostępna
                            {% endif %}
                        </td>
                        <td> 
                            <div class="d-grid gap-2">
                                {% if book.borrowed == false and book.reservation == false %}
                                    <button class="btn btn-sm btn-primary">Wypożycz</button>
                                {% else %}
                                    <button class="btn btn-sm btn-primary" disabled>Wypożycz</button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div> 

{% endblock %}