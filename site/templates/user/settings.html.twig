{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/settings.css') }}">
      {% endblock %}

{% block body %}
    {% if user is defined%}

        <div class="bcg">
            <div class="profile">
                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-person-circle mb-4" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg>
            <h1 class="fs-1">{{ user.login }}</h1>
            <p class="fs-3">
                {% if user.isAdmin %}
                Administrator
                {% elseif user.isLibrarian %}
                Bibliotekarz
                {% else %}
                Czytelnik
                {% endif %}</p>
            </p>
                </div>
                    <div class="row">
                        {% if user.isAdmin %}
                            <a type="button" class="btn btn-dark m-2 col-sm-12 col-md-3 fs-3" href="{{ path('app_admin_panel', {'id': 2}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-hdd-stack" viewBox="0 0 16 16">
                                <path d="M14 10a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-1a1 1 0 0 1 1-1h12zM2 9a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1a2 2 0 0 0-2-2H2z"/>
