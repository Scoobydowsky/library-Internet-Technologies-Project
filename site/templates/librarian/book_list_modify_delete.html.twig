{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/booklist.css') }}">
    {% endblock %}

{% block body %}
    <div class="row col-sm-12 col-md-8">
        <table class='table'>
            <thead>
            <tr>
                <th class='fs-3'>Tytuł</th>
                <th class='fs-3'>Autor</th>
                <th class='fs-3'>Status</th>
                <th class='fs-3'>Akcja</th>

            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                {% set bookId = book.id %}
                <tr>
                    <td class='fs-4'><a href="{{ path('app_book_page', {'id': bookId}) }}">{{ book.title }}</a></td>
                    <td class='fs-4'>{{ book.authorID }}</td>
                    <td class='fs-4'>
                        {% if book.reservation == true %}
                            Zarezerwowano
                        {% elseif book.borrowed == true %}
                            Wypożyczona
                        {% elseif book.borrowed == false and book.reservation == false %}
                            Dostępna
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn_group">
                            {% if book.borrowed == false %}
                                <a class="btn btn-sm btn-primary fs-4" href="{{ path('app_book_book_edit', {'id': book.id}) }}">Edytuj</a>
                                <a class="btn btn-sm btn-danger fs-4" href="{{ path('app_book_delete', {'id': book.id}) }}">Usuń</a></button>
                            {% else %}
                                <a class="btn btn-sm btn-primary fs-4 disabled" href="{{ path('app_book_book_edit', {'id': book.id}) }}" disabled>Edytuj</a>
                                <a class="btn btn-sm btn-danger fs-4 disabled" href="{{ path('app_book_delete', {'id': book.id}) }}" disabled>Usuń</a></button>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}